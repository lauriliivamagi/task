{
  "version": "1.2.10",
  "publish": false,
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "no-explicit-any",
        "explicit-function-return-type",
        "no-inferrable-types",
        "no-non-null-assertion",
        "no-non-null-asserted-optional-chain"
      ]
    }
  },
  "tasks": {
    "start": "deno run -A src/main.ts",
    "serve": "deno run -A src/main.ts serve",
    "tui": "deno run -A src/main.ts tui",
    "generate-sdk": "deno run -A scripts/generate-sdk.ts",
    "test": "TASK_CLI_LOG_DISABLED=1 TASK_CLI_DB_URL=:memory: deno test -A",
    "test:cov": "rm -rf coverage && TASK_CLI_LOG_DISABLED=1 TASK_CLI_DB_URL=:memory: deno test -A --coverage=coverage",
    "coverage": "deno coverage coverage --exclude=\"^file:///tmp/\"",
    "compile": "deno compile -A -o task src/main.ts"
  },
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment"
  },
  "imports": {
    "@libsql/client": "npm:@libsql/client@^0.15.15",
    "@libsql/client/node": "npm:@libsql/client@^0.15.15/node",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "chrono-node": "npm:chrono-node@^2.7.0",
    "date-fns": "npm:date-fns@^4.1.0",
    "rrule": "npm:rrule@^2.8.1",
    "hono": "npm:hono@^4.6.0",
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^1.1.5",
    "@hono/swagger-ui": "npm:@hono/swagger-ui@^0.5.0",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7.5",
    "zod": "npm:zod@^4.1.13",
    "yargs": "npm:yargs@^17.7.0",
    "ink": "npm:ink@^6.5.1",
    "ink-select-input": "npm:ink-select-input@^6.2.0",
    "ink-text-input": "npm:ink-text-input@^6.0.0",
    "ink-spinner": "npm:ink-spinner@^5.0.0",
    "ink-link": "npm:ink-link@^4.1.0",
    "react": "npm:react@^19.2.0",
    "react/jsx-runtime": "npm:react@^19.2.0/jsx-runtime",
    "@types/react": "npm:@types/react@^19.2.7",
    "@hey-api/openapi-ts": "npm:@hey-api/openapi-ts@^0.88.0",
    "xstate": "npm:xstate@^5.24.0",
    "@xstate/react": "npm:@xstate/react@^6.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "ink-testing-library": "npm:ink-testing-library@^4.0.0",
    "agentfs-sdk": "npm:agentfs-sdk@^0.2.0-pre.3"
  }
}
